{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "responses.schema.json",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "message"
    ],
    "properties": {
      "user_ids": {
        "type": "array",
        "items": {
          "type": "integer",
          "minimum": 1
        }
      },
      "conditions": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "HAS_GIF",
                "HAS_TEXT",
                "NOT_IN_CHANNEL"
              ]
            },
            "value": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      },
      "message": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}