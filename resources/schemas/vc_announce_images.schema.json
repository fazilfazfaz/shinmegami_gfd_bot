{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "vc_announce_images.schema.json",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "filename": {
        "type": "string",
        "minLength": 1
      },
      "avatar_resize_to": {
        "type": "integer",
        "minimum": 1
      },
      "avatar_position_x": {
        "type": "integer",
        "minimum": 0
      },
      "avatar_position_y": {
        "type": "integer",
        "minimum": 0
      }
    },
    "required": [
      "filename",
      "avatar_resize_to",
      "avatar_position_x",
      "avatar_position_y"
    ],
    "additionalProperties": false
  }
}